<Window x:Class="VideoToGif.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoToGif"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
		Background= "Gray">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="5" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="1050" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="5" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="500"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		<Button Content="Open" Grid.Column="1" Grid.Row="4" Width="90" />
		<MediaElement Source ="Media\sample.mp4" Grid.Column="3" Grid.Row="1" LoadedBehavior="Play"/>
		<Button Content="Play/Pause" Grid.Column="3" Grid.Row="2" Width="90" Height="40"/>
		<Button Content="Convert"  Grid.Column="4" Grid.Row="4" Width="90" HorizontalAlignment="Right"/>
		<CheckBox Grid.ColumnSpan="4" Grid.Row="3" x:Name="Trim" Content="Trim" HorizontalAlignment="Center" Margin="90,0,0,0" VerticalAlignment="Bottom" />
	</Grid>
</Window>
